{
  "compilerOptions": {
    "incremental": true,
    "target": "ES2015",
    "module": "AMD",
    "declaration": true,
    "outFile": "./public/tampermonkeyUserScript.js",
    "rootDir": "./src",
    "removeComments": true,
    "isolatedModules": false,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "./src/tampermonkeyUserScript.ts"
  ]
}
